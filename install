#!/bin/sh

set -eu

MODELA_VERSION="v0.4.34"
INSTALLROOT=${INSTALLROOT:-"${HOME}/.modela"}

echo ${MODELA_VERSION}

happyexit() {
  echo ""
  echo "Add the modela CLI to your path with:"
  echo ""
  echo "  export PATH=\$PATH:${INSTALLROOT}/bin"
  echo ""
  echo "Now run:"
  echo ""
  echo "  md system verify --pre       # validate that modela can be installed"
  echo "  md system install            # install the control plane into the 'modela-system' namespace"
  echo "  md system verify             # validate everything worked!"
  echo "  md system dashboard          # launch the dashboard"
  echo ""
  exit 0
}

validate_checksum() {
  filename=$1
  SHA=$(curl -sfL "${url}.sha256")
  echo ""
  echo "Validating checksum..."

  case $checksumbin in
    *openssl)
      checksum=$($checksumbin dgst -sha256 "${filename}" | sed -e 's/^.* //')
      ;;
    *shasum)
      checksum=$($checksumbin -a256 "${filename}" | sed -e 's/^.* //')
      ;;
  esac

  if [ "$checksum" != "$SHA" ]; then
    echo "Checksum validation failed." >&2
    return 1
  fi
  echo "Checksum valid."
  return 0
}

OS=$(uname -s)
arch=$(uname -m)
cli_arch=""
case $OS in
  CYGWIN* | MINGW64*)
    OS=windows.exe
    ;;
  Darwin)
    ;;
  Linux)
    case $arch in
      x86_64)
        cli_arch=amd64
        ;;
      armv8*)
        cli_arch=arm64
        ;;
      aarch64*)
        cli_arch=arm64
        ;;
      armv*)
        cli_arch=arm
        ;;
      amd64|arm64)
        cli_arch=$arch
        ;;
      *)
        echo "There is no modela $OS support for $arch. Please open an issue with your platform details."
        exit 1
        ;;
    esac
    ;;
  *)
    echo "There is no modela support for $OS/$arch. Please open an issue with your platform details."
    exit 1
    ;;
esac
OS=$(echo $OS | tr '[:upper:]' '[:lower:]')

checksumbin=$(command -v openssl) || checksumbin=$(command -v shasum) || {
  echo "Failed to find checksum binary. Please install openssl or shasum."
  exit 1
}

dstfile="${INSTALLROOT}/bin/modela-${MODELA_VERSION}"
OS=$(uname -s)
arch=$(uname -m)
case $OS in
  CYGWIN* | MINGW64*)
    OS=windows.exe
    url=https://storage.googleapis.com/modela-tools/install/${MODELA_VERSION}/modela_windows_amd64/md.exe
    ;;
  Darwin)
    url=https://storage.googleapis.com/modela-tools/install/${MODELA_VERSION}/modela_darwin_amd64/md 
    ;;
  Linux)
    url=https://storage.googleapis.com/modela-tools/install/${MODELA_VERSION}/modela_linux_amd64/md 
esac


tmpdir=$(mktemp -d /tmp/modela.XXXXXX)
srcfile="modela-cli-${MODELA_VERSION}-${OS}"
if [ -n "${cli_arch}" ]; then
  srcfile="${srcfile}-${cli_arch}"
fi


if [ -e "${dstfile}" ]; then
  if validate_checksum "${dstfile}"; then
    echo ""
    echo "modela ${MODELA_VERSION} was already downloaded; making it the default ðŸŽ‰"
    echo ""
    echo "To force re-downloading, delete '${dstfile}' then run me again."
    (
      rm -f "${INSTALLROOT}/bin/modelactl"
      ln -s "${dstfile}" "${INSTALLROOT}/bin/modelactl"
    )
    happyexit
  fi
fi

(cd /
  cd "$tmpdir"


  echo "Downloading ${srcfile}... to ${tmpdir}"
  curl -o ${srcfile} -fLO "${url}"
  echo "Download complete!"

  #if ! validate_checksum "${srcfile}"; then
  #  exit 1
  #fi
  #echo ""
)

(
  mkdir -p "${INSTALLROOT}/bin"
  mv "${tmpdir}/${srcfile}" "${dstfile}"
  chmod +x "${dstfile}"
  rm -f "${INSTALLROOT}/bin/md"
  ln -s "${dstfile}" "${INSTALLROOT}/bin/md"
)


rm -r "$tmpdir"

echo "md ${MODELA_VERSION} was successfully installed ðŸŽ‰"
echo ""
happyexit
